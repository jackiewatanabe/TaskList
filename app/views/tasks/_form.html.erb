<%= form_for @task, method: form_method do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description, size: "60x12" %>

<%= f.label :complete, "completed?", class: "check" %>
<%= f.check_box :complete %>

<%= f.submit action_name, class: form_class %>

<% end %>
